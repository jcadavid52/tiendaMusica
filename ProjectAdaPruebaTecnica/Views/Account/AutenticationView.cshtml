@model ProjectAdaPruebaTecnica.ViewModel.ViewModelUserAutentication
@{
    ViewBag.Title = "AutenticationVew";
    Layout = null;
}
<head>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet" />
</head>



<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar sesión</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("AutenticationAction","Account")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="UsuarioAcceso" type="text" placeholder="Ingresa tu usuario" />
                                            <label for="inputEmail">Usuario</label>
                                            @Html.ValidationMessageFor(m => m.UsuarioAcceso, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="Clave" type="password" placeholder="Ingresa tu contraseña" />
                                            <label for="inputPassword">Contraseña</label>
                                            @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="d-flex justify-content-center">
                                           
                                            <input class="btn btn-primary" type="submit" value="Ingresar">
                                        </div>
                                        <div>
                                            <label style="color:red">@ViewBag.Mensaje</label>
                                        </div>
                                        <div class="card-footer text-center py-3">
                                            <div class="small"><a href="@Url.Action("RegisterView","Account")">¿No tiene una cuenta? Regístrate!</a></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
